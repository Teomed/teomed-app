{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "/backend/Dockerfile"
  },
  "deploy": {
    "startCommand": "sh start-with-seed.sh",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "always"
  }
} 